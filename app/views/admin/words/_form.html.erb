<%= form_for [:admin,@category,@word] do |f| %>
<div class="col-5 mx-auto">
<%= render 'shared/error_messages',object: f.object %>
  <div class="form-group">
      <%= f.label :Word %>
      <%= f.text_field :content,class: 'form-control'%>
  </div>

  <div class="form-group">
      <%= label_tag "choices" %>
      <%= f.fields_for :choices do |choice| %>
          <%= choice.text_field :content,class: 'form-control' %>
          <%= choice.check_box :isCorrect %>
          <h5 class="d-inline">This is the answer</h5>
      <% end %>
  </div>
  <%= f.submit "Create Word",class: "btn btn-outline-danger btn-block create create_botton word-btn" %>
<% end %>


