<div class="category_top">
    <h1>Words</h1>
</div> 
<div class="lesson_body">
    <div class="row">
        <% @categories.each do |category| %>
            <div class="col-sm-6">
                <div class="card card-setting">
                    <div class="card-body">
                        <%= category.title %>
                        <hr>    
                        <%= category.description%>
                        <br>
                        <% lesson =current_user.lesson_taken(category.id) %>

                        <% if lesson.nil?%>
                            <%=link_to "Start lesson", lessons_path(category_id: category.id),method: :post,class:"btn btn-outline-danger btn-sm start-btn" %>
                        <% else %>
                            <%=link_to "Show result", "#", class:"btn btn-outline-primary result-btn"%>
                        <% end %>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>
<div class="paginate text-center lessons_paginate">
    <%= will_paginate %>
</div>